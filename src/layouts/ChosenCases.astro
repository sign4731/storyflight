---
import {getData} from '../helpers/dataFetching.js';
import CircleWithArrow from '../assets/icons/CircleWithArrow.svelte';
import VideoSlider from '../components/VideoSlider.svelte';

const chosenCasesData = await getData("chosenCases");
const sectionData = await getData("pages", "forside");

---

<section>
<h2 class="container container--large">{sectionData.acf["videoslider-heading"]}</h2>
<VideoSlider client:load {chosenCasesData}/>
 <div class="link container container--fluid">
    <a href={sectionData.acf["videoslider_button_link"]} class="a">{sectionData.acf["videoslider_button_text"]}</a>
    <a href={sectionData.acf["videoslider_button_link"]} class="arrow_icon"><CircleWithArrow /></a>
  </div>
</section>

<style lang="scss">
section {
    background: var(--clr-secondary);
    padding-bottom: 0rem;
  @media (min-width: 768px) {
    padding-bottom: 0rem;
  }
}

h2 {
  color: var(--clr-white);
  margin-bottom: 2rem;
}

.link{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 2.5rem;
    padding-bottom: 1.5rem;
    @media (min-width: 768px) {
    margin-top: 5.5rem;
  }
    a{
      color: var(--clr-white);
    }
    .arrow_icon{
      margin-left: 1em;
      color: var(--clr-primary);
    }
}

</style>