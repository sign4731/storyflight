---
import Logo from '../assets/Logo.astro';
import Menu from '../components/Menu.svelte';
import {getData} from '../helpers/dataFetching.js';

const menuData = await getData("menus", "primaryMenu");
---

<header>
  <Logo />
  <Menu client:load menuData={menuData}/>
</header>

<style lang="scss">
header {
  position: fixed;
  top: 0;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
