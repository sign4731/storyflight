---
import Logo from '../assets/Logo.astro';
import Menu from '../components/Menu.svelte';
import {getData} from '../helpers/dataFetching.js';

const menuData = await getData("menus", "primaryMenu");
const soMeData = await getData("menus", "contactInformation");

---

<header class="header color-blend">
  <Logo />
  <Menu client:load menuData={menuData} soMeData={soMeData} menuActive/>
</header>

<style lang="scss">
header {
  position: fixed;
  top: 0;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  padding: 1.2rem;
  z-index: 1;
}
</style>