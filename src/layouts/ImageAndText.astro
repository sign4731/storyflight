---
import {getData} from '../helpers/dataFetching.js';



const servicesTopData = await getData("pages", "viTilbyder");
const servicesTopImage = await getData("servicesImage");

const { acf: { 
  heading: title, 
  text: body,
}} = servicesTopData;

---

<section class="container container--medium top-section-wrapper">
    <div class="section top-section">
    <div class="textwrapper">
    <h1>{title}</h1>
    <p>{body}</p>
    </div>
    <div class="img-wrapper">
        <img src={servicesTopImage[0].services_image.guid} /> 
    </div>
    </div>
</section>

<style lang="scss">
.top-section-wrapper{
    overflow: hidden;
    width: 100%;
    @media (min-width: 992px) {
    overflow: unset;
    }
    .top-section{
        @media (min-width: 992px) {
        display: grid;
        grid-template-areas:
            "h1 img"
            "p img";
        grid-template-columns: 50% 50%;

    }
    h1{
        margin-bottom: var(--gutter);
        grid-area: h1;
    }
    p{
        grid-area: p;
    }
    .img-wrapper{
        position:relative;
        clip-path: polygon(18% 0%, 100% 0%, 82% 100%, 0% 100%);
        height: 40vh;
        width: 700px !important;
        grid-area: img;
        margin-top: 4rem;
        img{
            position: absolute;
            // height: 40vh;
            object-fit: cover;
            display: block;
        } 
         @media (min-width: 600px) {
            transform: translateX(200px) scale(1.5,1.5);
            margin-top: 8rem;
            
        }
         @media (min-width: 992px) {
            transform: translateX(360px) scale(2,2);
            align-self: center;
        }
    }
    
}
}


</style>