---
import { getData } from '../helpers/dataFetching.js';
const pagesData = await getData("pages", "forside");

---

<section id="text-block" class="section-padding">
    <div class="text-block-wrap container container--small">
        <h2 class="caption">{pagesData["acf"].catch_phrase}</h2>
        <p>{pagesData["acf"].text_block}</p>
    </div>
</section>

<style lang="scss">
section{
    background: var(--clr-grey);
}
.text-block-wrap {
    display: flex;
    flex-direction: column;
    @media (min-width: 992px) {
            flex: 1;
            flex-direction: row;
            gap: 4rem;
      }
    h2, p {
        @media (min-width: 992px) {
            flex: 1;
            color: var(--clr-secondary);
      }
    }
}
</style>