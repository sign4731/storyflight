---
import BaseLayout from '../layouts/BaseLayout.astro';
import KontaktText from '../layouts/KontaktText.astro';
import KontaktForm from '../components/KontaktForm.svelte';
import Line from "../assets/icons/Line.astro";
import { getData } from '../helpers/dataFetching.js';
---

<BaseLayout>
    <section class="kontakt-section container--medium">

        <section class="container container--xsmall section-padding text-section">
            <KontaktText />
        </section>

        <!-- <div class="line"><Line/></div> -->
        <svg class="separation_line" width="210" height="456" viewBox="0 0 245 456" fill="none" xmlns="http://www.w3.org/2000/svg">
            <line opacity="1" x1="240.479" y1="2.31822" x2="4.42951" y2="453.407" stroke="#000000" stroke-width="10"/>
        </svg>
        
        <section class="container container--xsmall section-padding form-section">
            <h3>Kontakt os</h3>
            <KontaktForm />
        </section>

    </section>
</BaseLayout>

<style lang="scss">
@media (max-width: 991px){
    .container--xsmall{
        max-width: 100%;
    }
}
.kontakt-section{
    padding-bottom: 0;
    margin: 0 auto;
    
    @media (min-width: 768px) {
    padding-top: 3rem;
    }
        @media (min-width: 992px) {
        display: flex;
        justify-content: space-between;
        height: 100vh;
        gap: 400px;
    }
  .text-section{
    margin: 0;
        @media (min-width: 992px){
            display: flex;
            align-items: center;
        }
    }
    .separation_line{
      display: none;
        @media (min-width: 992px) {
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.05;
      }
    }
    .form-section{
    background: var(--clr-secondary);
    margin: 0;

    @media (min-width: 992px){
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    

        h3{
            color: var(--clr-white);
        }
        @media (min-width: 992px) {
        background: none;

        h3{
            color: var(--clr-black);
        }
    }
}

}

</style>